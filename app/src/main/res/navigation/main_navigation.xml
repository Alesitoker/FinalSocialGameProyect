<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.iessaladillo.alejandro.finalsocialgameproyect.ui.login.LoginFragment"
        android:label="@string/loginFragment_title" >
        <action
            android:id="@+id/actionLoginToSignin"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/actionLoginToListGroups"
            app:destination="@id/listGroupsFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.iessaladillo.alejandro.finalsocialgameproyect.ui.signUp.SignUpFragment"
        android:label="@string/signInFragment_title" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.iessaladillo.alejandro.finalsocialgameproyect.ui.Chat.ChatFragment"
        android:label="@string/chatFragment_title"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/postFragment"
        android:name="com.iessaladillo.alejandro.finalsocialgameproyect.ui.Post.PostFragment"
        android:label="@string/postFragment_title"
        tools:layout="@layout/fragment_post" />
    <fragment
        android:id="@+id/listGroupsFragment"
        android:name="com.iessaladillo.alejandro.finalsocialgameproyect.ui.Chats.ListGroupsFragment"
        android:label="@string/listGroupsFragment_title" >
        <action
            android:id="@+id/actionListGroupsToChat"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/actionListGroupsToGroupCreationForm"
            app:destination="@id/groupCreationFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/yourListGroupsFragment"
        android:name="com.iessaladillo.alejandro.finalsocialgameproyect.ui.Chats.yourChats.YourListGroupsFragment"
        android:label="@string/YourListGroupsFragment_title" >
        <action
            android:id="@+id/actionYourListGroupsToChat"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/actionYourListGroupsToGroupCreationForm"
            app:destination="@id/groupCreationFormFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupCreationFormFragment"
        android:name="com.iessaladillo.alejandro.finalsocialgameproyect.ui.newGroup.GroupCreationFormFragment"
        android:label="@string/groupCreationFormFragment_title" />
</navigation>